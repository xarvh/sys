        format = "%status%percentage"
        integer_battery_capacity = true
        low_threshold = 10
        threshold_type = percentage
        last_full_capacity = true

        status_chr = "âš¡"
        status_bat = "ðŸ”‹"
        status_unk = "?"
        status_full = "â˜»"
}

load {
        format = "%1min"
}

memory {
        format = "%available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

volume master {
        format = "â™ª%volume  "
        format_muted = "â™ª(%volume)  "
        device = "default"
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}
